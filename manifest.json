{
  "manifest_version": 3,
  "name": "Gemini Helper",
  "version": "1.0",
  "description": "Double press Alt to send selected text or page source to Gemini.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage", // Added storage permission
    "notifications" // Added for displaying results later (optional)
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/" // Added host permission for API
  ],
  "options_page": "options.html", // Added options page
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
