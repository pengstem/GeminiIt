{
  "manifest_version": 3,
  "name": "Gemini Helper",
  "version": "1.0",
  "description": "Double press Alt to send selected text or page source to Gemini.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
